<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <VersionPrefix>0.6.0</VersionPrefix>
    <!-- <VersionSuffix>preview.0.2</VersionSuffix> -->
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Description>Classes used by the AutoSpectre.SourceGeneration package</Description>
    <Authors>Jeppe Roi Kristensen</Authors>
    <RepositoryUrl>https://github.com/jeppevammenkristensen/auto-spectre</RepositoryUrl>
    <PackageReleaseNotes>Added Culture to be set on the AutoSpectreFormAttribute. Added better ability to define a intializer for a property type that is decorated with the AutoSpectreFrom and 
    fixing that it should be called correctly. Added a new override of TextPrompt to enable a custom converter from string back to the desired type. 
    And an extension method to enable setting the culture</PackageReleaseNotes>
    <PackageIcon>ghost.png</PackageIcon>
    <PackageReadmeFile>Readme.md</PackageReadmeFile>    
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <DocumentationFile>bin\Release\AutoSpectre.xml</DocumentationFile>
  </PropertyGroup>
  <ItemGroup>
    <None Include="docs\Readme.md" Pack="true" PackagePath="\">
    </None>
    <None Include="images\ghost.png">
      <Pack>true</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Spectre.Console" Version="0.47.0" />
  </ItemGroup>

</Project>
